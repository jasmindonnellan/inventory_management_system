<p id="notice"><%= notice %></p>

<h1>Items</h1>

<h4 style="text-align:center"> The current temperature is <%= @temperature.round %> degrees celcius </h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="2">Change Quantity</th>
      <th colspan="3">Options</th>
      
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= number_to_currency(item.price) %></td>
        
        <%if item.quantity > 0 %>
        <td><%= item.quantity %></td>
        <%else%>
          <td> <b style="color:red"> Sold Out! </td>
        <%end%>


        <td><%= link_to 'Add Quantity', add_quantity_path(item_id: item.id), class: "btn btn-success btn-sm" %></td>
        <%if item.quantity > 0 %>
        <td><%= link_to 'Decrease Quantity', decrease_quantity_path(item_id: item.id), class: "btn btn-danger btn-sm" %></td>
        <%else%>
          <td><i>Decrease Quantity</i></td>
        <%end%>
        <td><%= link_to 'Show', item, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

